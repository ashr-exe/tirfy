{
  "manifest_version": 3,
  "name": "TIRFY - The Internet Rewritten For You",
  "version": "1.0",
  "description": "Transform any webpage text into different writing styles and personalities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TIRFY - Rewrite in Any Style"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}